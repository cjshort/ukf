<div class="row padding3v">
  <div class="large-12 columns content">
    <%= form_for(@post) do |f| %>
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </p>
     
      <p>
        <%= f.label :title %><br>
        <%= f.text_area :title %>
      </p>

      <p>
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </p>

      <p>
        <%= f.label :website %><br>
        <%= f.text_area :website %>
      </p>

      <p>
        <%= f.label :approved %><br>
        <%= f.text_area :approved %>
      </p>

      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>
</div>